<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <style>
        .container{
            margin: auto;
        }
        #header{
            font-size:90px;
            color: gray;
         
        }
        .inputArea{
            border: 1px solid gray;
            height:30px;
            width:500px;
        }
        .login{
            background-color: rgba(32, 179, 32, 0.51);
            border: 1px solid gray;
            height:30px;
            width:90px;
            border-radius:6%;
        }
        .textarea{
            height:380px;
        }
        #myLog{
            float: left;
			height: 100%;
            display: none;

        }
		#hah{
			border-bottom: solid 1px black;
			width:250px;
			margin-bottom: 16px;
		}
		.cont{
			height: 18px;
			overflow: hidden;
		}
    </style>
  </head>
  <body style="background-image:url(./img/9.jpg);display:flex;">
    <div id="myLog">
		<h1>我的日志</h1>
		<% if(logSource.length > 8) {%>
		<%	var temArry = logSource.slice(0,8);%>
		<%}temArry.forEach(function(item) { %>
		<div id="hah">
			<div class="cont">标题：<%= item.title %></div>
			<div class="cont">作者：<%= item.author %></div>
			<div class="cont">发布时间：<%= item.time.toLocaleString() %></div>
			<div class="cont">内容：<%= item.content %></div>
		</div>
		<% }); %>

		
	</div>
    <div class="container"><br/><br/><br/><br/><br/>
    <h1 id="header"><%= title %></h1>
    <form action="./publishLog" method="post" class="container1">
        <input class="inputArea" type="text" placeholder="标题"  name="title"/><br/><br/>
        <textarea class="inputArea textarea" placeholder="正文" name="content"></textarea><br/><br/>
        <input class="login" type="submit" value="发布" />
		<input class="login" type="submit" value="重置全部" onclick='clearContent(event);return false;' />
		<input id="displayInfo" class="login" type="submit" value="显示我的日志" onclick='displayMyInfo(event);return false;' />
		<br/> 
    </form>
    </div>
    <script>
        function clearContent(event) {
            event.preventDefault();
			event.stopPropagation();        
            var nodeArr = document.getElementsByClassName("inputArea");
            Array.prototype.forEach.call(nodeArr, function(item) {
                item.value = null;
            });
        }
        function displayMyInfo(event) {
            event.preventDefault();
			event.stopPropagation();        
            var myLog = document.getElementById("myLog");
			if(myLog.style.display != "block") {
				document.getElementById("displayInfo").value = "隐藏我的日志";
				myLog.style.display = "block";				
			}else {
				document.getElementById("displayInfo").value = "显示我的日志";
				myLog.style.display = "none";
			}
        }		
    </script>
  </body>
</html>
